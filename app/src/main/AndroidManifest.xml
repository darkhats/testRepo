<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calendarapp.kaylagallatin.calendar" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".add_event"
            android:label="@string/add_event"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".set_time"
            android:label="@string/title_activity_set_time"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".set_date"
            android:label="@string/title_activity_set_date"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".delete_event"
            android:label="@string/title_activity_activity_delete_event"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".choose_edit_event"
            android:label="@string/title_activity_choose_edit_event"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".daily_view"
            android:label="@string/title_activity_daily_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".weekly_view"
            android:label="@string/title_activity_weekly_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>


        <activity
            android:name=".add_category"
            android:label="@string/title_activity_add_category"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".delete_category"
            android:label="@string/title_activity_delete_category"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
